<%= form_for @rec do |f| %>
<div class='row'>
<div class='col s4 offset-s4'>
 <p>
   <%= f.label :dish, class: "dish" %><br>
   <%= f.text_field :dish %>
 </p>
</div>
</div>

<div class='row'>
<div class='col s4 offset-s4'>
 <p>
   <%= f.label :preptime, class: "preptime (minutes)" %><br>
   <%= f.text_field :preptime %>
 </p>
</div>
</div>

<div class='row'>
<div class='col s4 offset-s4'>
 <p>
   <%= f.label :cooktime, class: "cooktime (minutes)" %><br>
   <%= f.text_field :cooktime %>
 </p>
 </div>
 </div>
<div class='row'>
<div class='col s6 offset-s3' >
 <p style="text-align: center;">
   <%= f.label :ingredients, class: "ingredients" %><br>
   <%= f.text_area :ingredients %>
 </p>
</div>
</div>

<div class='row'>
<div class='col s6 offset-s3'>
 <p style="text-align: center;">
   <%= f.label :steps, class: "steps" %><br>
   <%= f.text_area :steps%>
 </p>
   <a class='waves-effect waves-light btn green'><%= f.submit %></a>
</div>
</div>

<% end %>
